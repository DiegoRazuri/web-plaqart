@import "style.styl"

body
	width 100%
	background-color white
	margin 0
	padding 0
	border none

	header
		background-color white
		height 85px
		margin 0
		padding 0
		vertical-align top
		width 100%
		z-index 8
		position fixed
		top 0

		nav
			height 100%
			padding 0
			margin 0
			vertical-align top

			ul 
				width 100%
				padding 0
				height 100%
				margin 0
				display block
				border-bottom solid 3px #A4A4A4

				#btnNav1:hover
					border-right solid 1px #8cc63e

				#btnNav2:hover
					border-right solid 1px #f16420

				#btnNav3:hover
					border-right solid 1px #00adef


				li
					width 100%
					border-bottom solid 1px #A4A4A4
					border-right solid 1px #A4A4A4
					background-color white
					height 84px
					margin 0
					padding 0
					float left
					overflow hidden
					display block


					#btnNavAni1:hover
						background-color #8cc63e

						h4
							color white
						.lineBtn1
							background-color white

					#btnNavAni2:hover
						background-color #f16420

						h4
							color white
						.lineBtn2
							background-color white

					#btnNavAni3:hover
						background-color #00adef

						h4
							color white
						.lineBtn3
							background-color white

					#btnNavAni4:hover
						background-color #652b90

						h4
							color white
						.lineBtn4
							background-color white

					.bloqClaro
						width 100%
						height 100%
						cursor pointer
						position relative
						top 0
						padding 0
						margin 0
						transition 0.4s

						a
							display block
							height 100%
							width 100%
							margin 0
							padding 0
							text-decoration none


							figure img
								display block
								width 160px
								margin 15px auto

							h4
								font-size 15px
								font-family offside
								font-weight ligther
								letter-spacing 1px
								text-align right
								position relative
								top 25px
								right 8%	
								color #1C1C1C
								float right
								margin 0
								padding 0
								display inline-block
								line-height 115%
								
							span
								display inline-block
								border none
								height 32px
								width 9px
								vertical-align middle
								float right
								margin 0
								padding 0 
								position relative
								top 27px
								right 5.5%

							.lineBtn1
								background-color #8cc63e
							.lineBtn2
								background-color #f16420
							.lineBtn3
								background-color #00adef
							.lineBtn4
								background-color #652b90

					.bloqClaro
						display block
						transition 0.4s
					.btnSelec
						background-color #00adef

						a h4
							color white
						a .lineBtn3
							background-color white
					 
					#btnNavAni0
						-moz-user-select: none;
						-webkit-user-select: none;
						-ms-user-select: none;
						span
							display block
							position absolute
							top 10px
							right 25px
							font-weight normal
							color #A4A4A4
							font-size 2em
							cursor pointer
							text-decoration none
							-webkit-user-select none
						    -moz-user-select none
						    -khtml-user-select none

				.blqmovil
					display none

				.ultimoBtnNav
					border-right none
	
