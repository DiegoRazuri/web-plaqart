@import "style.styl"

body
	width 100%
	background-color white
	margin 0
	padding 0
	border none

	header
		background-color white
		height 85px
		margin 0
		padding 0
		vertical-align top
		width 100%
		z-index 8
		position fixed
		top 0

		nav
			height 100%
			padding 0
			margin 0
			vertical-align top

			ul 
				width 100%
				padding 0
				height 100%
				margin 0
				display block
				border-bottom solid 3px #A4A4A4

				#btnNav1:hover
					border-right solid 1px #8cc63e

				#btnNav2:hover
					border-right solid 1px #f16420

				#btnNav3:hover
					border-right solid 1px #00adef


				li
					width 100%
					border-bottom solid 1px #A4A4A4
					border-right solid 1px #A4A4A4
					background-color white
					height 84px
					margin 0
					padding 0
					float left
					overflow hidden
					display block


					#btnNavAni1:hover
						background-color #8cc63e

						h4
							color white
						.lineBtn1
							background-color white

					#btnNavAni2:hover
						background-color #f16420

						h4
							color white
						.lineBtn2
							background-color white

					#btnNavAni3:hover
						background-color #00adef

						h4
							color white
						.lineBtn3
							background-color white

					#btnNavAni4:hover
						background-color #000000

						h4
							color white
						.lineBtn4
							background-color white

					.bloqClaro
						width 100%
						height 100%
						cursor pointer
						position relative
						top 0
						padding 0
						margin 0
						transition 0.4s

						a
							display block
							height 100%
							width 100%
							margin 0
							padding 0
							text-decoration none


							figure img
								display block
								width 160px
								margin 15px auto

							h4
								font-size 15px
								font-family offside
								font-weight ligther
								letter-spacing 1px
								text-align right
								position relative
								top 25px
								right 8%	
								color #1C1C1C
								float right
								margin 0
								padding 0
								display inline-block
								line-height 115%
								
							.btnrayas
								display inline-block
								border none
								height 32px
								width 9px
								vertical-align middle
								float right
								margin 0
								padding 0 
								position relative
								top 27px
								right 5.5%

							.lineBtn1
								background-color #8cc63e
							.lineBtn2
								background-color #f16420
							.lineBtn3
								background-color #00adef
							.lineBtn4
								background-color #000000

					.bloqClaro
						display block
						transition 0.4s
					.btnSelec
						background-color #00adef

						a h4
							color white
						a .lineBtn3
							background-color white
					 
					#btnNavAni0
						-moz-user-select: none;
						-webkit-user-select: none;
						-ms-user-select: none;
						span
							display block
							position absolute
							top 10px
							right 25px
							font-weight normal
							color #A4A4A4
							font-size 2em
							cursor pointer
							text-decoration none
							-webkit-user-select none
						    -moz-user-select none
						    -khtml-user-select none

				.blqmovil
					display none

				.ultimoBtnNav
					border-right none
	
	#contenedor
		padding 0
		background-color white
		width 100%
		display inline-block
		margin 0 auto


		.wrapperPrincipal
			margin 0 auto
			width 100%
			display block

			#figura1, #descripcionWork
				

			#figura1
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			#figura2, #figura3, #figura4
				

			#figura2
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			#figura3
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			#figura4
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			#figura5, #figura6
				

			#figura5
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			 #figura6, #figura7, #figura8, #figura9, #figura10
				width 100%
				position relative
				top 85px
				margin 0
				padding 0

			.descripcionTrabajo
				width 100%
				margin 0
				padding 0
				background-color white
				position relative
				top 85px

				h2
					font-family roboto slab
					font-weight normal
					font-size 1.3em
					color #1C1C1C
					width 85%
					padding 0
					letter-spacing 1px
					margin 45px auto 0 auto

				p
					font-family open sans
					font-weight lighter
					text-align justify 
					font-size 0.8em
					color #151515
					width 85%
					border-bottom solid 1px #0071bc
					padding 15px 0 50px 0
					margin 0 auto 
				
				h1
					font-family open sans
					font-weight lighter
					text-align right
					font-size 0.9em
					color #0071bc
					letter-spacing 1px
					width 85%
					padding 9px 0 45px 0
					margin 0 auto

			.bloques
				margin 0
				padding 0
				display block

				figure
					width 100%
					margin 0
					padding 0
					display block

					img
						width 100%
						margin 0
						padding 0
						display block

		#portafolio
			z-index 5
			background-color #00adef
			height 580px
			display inline-block
			position relative
			top 85px
			margin 0

			#portafolioAncla
				border solid 1px red
				position absolute
				top -80px

			.listaBotonesPorta
				margin 0 auto
				padding 0
				position relative
				top 105px
				width 100%
				li
					text-decoration
					list-style-type none
					display inline-block
					margin-right -4px
					padding 6px 0 0 0
					font-family open sans
					font-weight 500
					font-size 1em
					color #15619d
					text-align center
					vertical-align middle
					letter-spacing 1px
					cursor pointer
					width 50%
					height 30px
					background: #7dd3f6;
					position: relative;
					border-right solid 1px #15619d
					transition all 0.4s

				li:hover
					background-color #15619d
					color white

				.botonesPortaUltimo
					border-right none

				.botonActivado
					background-color #15619d

				.ui-selected
					background-color #15619d
					color white

				.btnUltimos
					border-top solid 1px #15619d

			#marco
				display block
				position relative
				top 140px
				z-index 6
				height 276px
				width 320px
				margin 0 auto
				overflow hidden

				#vitrina
					width 320px
					height 274px
					margin 0 auto
					position relative
					top 0
					padding 0
					list-style-type none

					.vinetas
						list-style-type none
						padding 0
						text-decoration none
						cursor pointer
						width 160px
						margin 0
						height 274px
						float left
						background: #7dd3f6;
						position: relative;
						overflow hidden

						a
							text-decoration none
							width 100%
							height 100%
							border none
							display block

							figure 
								display inline-block
								width 100%
								height 100%
								margin 0
								padding 0
								position relative
								top 0
								z-index 0

								img
									width 100%
									height 274px
									margin 0
									padding 0

							.wrapperVinetas
								display block
								width 100%
								height 100%
								transition 1s
								position relative
								top -278px
								z-index 9999


								.sombra
									display block
									background-color #15619d
									width 100%
									height 100%
									position relative
									opacity 0.6
									top 0
									margin 0
									padding 0

								.descripcion
									border-left solid 2px
									border-color #7dd3f6
									width 60%
									margin 0 auto
									padding 0 0 0 7px
									display block
									vertical-align middle
									position relative
									opacity 1
									top -190px
									z-index 9999

									h5
										margin 0
										padding 0
										font-family open sans
										font-size 0.9em
										font-weight bold
										color white
										letter-spacing 1px

									.categoria
										margin 0
										padding 0
										font-family open sans
										font-size 0.8em
										font-weight light
										font-style italic
										color white

									.cliente
										margin 0
										padding 0
										font-family open sans
										font-size 0.8em
										font-weight 900
										letter-spacing 1px
										font-style normal
										color #7dd3f6

					.vinetas:hover
						a .wrapperVinetas
							-webkit-transform rotateY(90deg)
							transform rotateY(90deg)
							opacity 0
		
			.titulosSegmentos
				font-family offside
				font-size 1.1em
				font-weight normal
				color white
				letter-spacing 2px
				margin 0 auto
				text-align center
				position relative
				top 70px
				border none

			.delineado01
				width 70%
				margin 0 auto
				position relative
				top 80px

				img
					height 100%
					width 100%
				
				

			.btnAvanzar, .btnAtras
				display inline-block
				position relative
				cursor pointer
				top 95px
				z-index 50
				img
					height 100%
					width 35px
					display inline-block

			.btnAvanzar
				position relative
				float right
				margin-right 30px
				

			.btnAtras
				position relative
				margin-left 30px

	#footer
		z-index -1
		background-color black
		height 70px
		display block
		margin 0
		padding 0
		position relative
		top 65px
				
		div
			display block
			width 320px
			margin 0 auto
			padding 0
			position relative
			top 35px

			figure, p
				display inline-block
				

			figure
				width 65px
				vertical-align middle
				img
					width 100%


			p
				font-family open sans
				font-weight lighter
				color white
				margin-left 10px
				font-size 0.5em

			p:before
				content: "•"
				color white
				font-weight bold
				margin-right 7px


		
	
