@media screen and (min-width: 768px)

	body
		#contenedor
			.wrapperPrincipal
				.descripcionTrabajo
					h2
						font-size 1.5em

					p
						font-size 0.9em

					h1
						font-size 1em
		#footer
			div
				width 450px
				top 20px
				figure
					width 90px
				p
					font-size 0.7em

