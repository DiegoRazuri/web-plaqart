			nav
				ul
					li
						width 19.93%
						display block

						#btnNavAni0
							span
								display none

					.blqmovil
						display block

		#contenedor
			.wrapperPrincipal
				width 1275px
				#figura1, #descripcionWork
					float left
				#figura1
					width 690px
					height 515px
				#figura2, #figura3, #figura4
