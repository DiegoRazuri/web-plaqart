				#figura2
					width 345px
					height 345px
				#figura3
					width 499px
					height 345px
				#figura4
					width 422px
					height 345px
				#figura5, #figura6
					float left
				#figura5
					width 499px
					height 345px
				#figura6
					width 422px
					height 345px
				#descripcionWork
					width 576px
