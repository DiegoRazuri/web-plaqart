@import "style.styl"

body
	width 100%
	background-color white
	margin 0
	padding 0
	border none

	header
		background-color white
		height 85px
		margin 0
		padding 0
		vertical-align top
		width 100%
		z-index 8
		position fixed
		top 0

		nav
			height 100%
			padding 0
			margin 0
			vertical-align top

			ul 
				width 100%
				padding 0
				height 100%
				margin 0
				display block
				border-bottom solid 3px #618037

				#btnNav1:hover
					border-right solid 1px #8cc63e

				#btnNav2:hover
					border-right solid 1px #f16420

				#btnNav3:hover
					border-right solid 1px #00adef


				li
					width 100%
					border-bottom solid 1px #A4A4A4
					border-right solid 1px #A4A4A4
					background-color white
					height 84px
					margin 0
					padding 0
					float left
					overflow hidden
					display block
					transition 0.4s


					#btnNavAni1:hover
						background-color #8cc63e

						h4
							color white
						.lineBtn1
							background-color white

					#btnNavAni2:hover
						background-color #f16420

						h4
							color white
						.lineBtn2
							background-color white

					#btnNavAni3:hover
						background-color #00adef

						h4
							color white
						.lineBtn3
							background-color white

					#btnNavAni4:hover
						background-color #652b90

						h4
							color white
						.lineBtn4
							background-color white

					.bloqClaro, .bloqHov
						width 100%
						height 100%
						cursor pointer
						position relative
						top 0
						padding 0
						margin 0
						transition 0.4s

						a
							display block
							height 100%
							width 100%
							margin 0
							padding 0
							text-decoration none


							figure img
								display block
								width 160px
								margin 15px auto

							h4
								font-size 15px
								font-family offside
								font-weight ligther
								letter-spacing 1px
								text-align right
								position relative
								top 25px
								right 8%	
								color #1C1C1C
								float right
								margin 0
								padding 0
								display inline-block
								line-height 115%
								
							span
								display inline-block
								border none
								height 32px
								width 9px
								vertical-align middle
								float right
								margin 0
								padding 0 
								position relative
								top 27px
								right 5.5%

							.lineBtn1
								background-color #8cc63e
							.lineBtn2
								background-color #f16420
							.lineBtn3
								background-color #00adef
							.lineBtn4
								background-color #652b90


					.bloqHov
						position relative
						display none
						top -85px
						left -270px
						z-index 17
						background-color black
						margin 0
						padding 0

						a
							display block
							height 100%
							width 100%
							margin 0
							padding 0
							text-decoration none

							h4
								color #FAFAFA

							.lineBtn1, .lineBtn2, .lineBtn3, .lineBtn4
								background-color #FAFAFA

					.bloqClaro
						display block
						transition 0.4s
					.btnSelec
						background-color #8cc63e

						a h4
							color white
						a .lineBtn1
							background-color white
					 
					#btnNavAni0
						span
							display block
							position absolute
							top 10px
							right 25px
							font-weight normal
							color #A4A4A4
							font-size 2em

				.blqmovil
					display none

				.ultimoBtnNav
					border-right none
	
	section
		width 100%
		display block
		height 100%
		border none

		.bloqVerde
			background-color #8cc63e
			width 100%
			position relative
			top 85px
			margin 0
			padding 0
			display block
			height 700px

			.wrapper1
				display block
				margin 0 auto
				width 56%
				padding 0
				position relative 
				top 100px
				padding-bottom 30px
				border-bottom solid 1.5px #618037
			
				h2
					text-align center
					color white
					font-family offside
					font-size 43px
					letter-spacing 2px
					font-weight normal
					margin 0 auto
					padding 0
				h3
					color #618037
					font-family open sans
					font-size 1.6em
					line-height 1.3
					font-weight lighter
					text-align center
					margin 15px auto
					padding 0

			.wrapper2
				display block
				margin 0 auto
				width 1100px
				padding 0
				position relative 
				top 110px

				h4
					text-align center
					color white
					font-family offside
					font-size 2.1em
					letter-spacing 2px
					font-weight normal
					margin 60px auto 0 auto
					padding 0

				figure
					width 100%
					border none
					margin 40px auto 0 auto
					display block
					padding 0

					.wrapperIco
						display inline-block
						margin 0
						padding 0				

						img
							display block
							width 93px
							margin 0 auto
							padding 0 
							position relative
							top 0


						.icoFormula1
							height 90px

						.icoFormula2
							height 55px

						.icoFormula3
							height 85px

						.icoFormula4
							height 95px
							width 55px

						.icoFormula5
							height 95px

						.icoSuma
							width 28px
							margin 0 38.5px 35px 38.5px

						.textoFormula
							display block
							color white
							font-family Roboto Slab
							font-weight lighter
							font-size 1.2em
							letter-spacing 1px
							margin 30px auto 0 auto
							padding 0
							text-decoration none

		.bloqPunteado
			background-color white
			width 100%
			position relative
			top 85px
			margin 0
			padding 0
			display block
			height 520px
			background-image url("PuntosFondo.png")
			background-repeat: repeat-x;
			background-size: 26% 80%;
			background-position top 25px right 0px

			.contenidoPrincipal
				width 950px
				margin 0 auto
				padding 0
				background-color white
				border solid 1px white

				.wrapperContenido
					width 560px
					margin 70px auto
					padding 0
					background-color white
					height 376px
					overflow hidden
					text-align justify

					font-family open sans
					font-weight lighter
					font-size 1.1em
					color #151515

					.subrayado
						font-family open sans
						font-weight normal
						display inline-block
						margin 0
						padding 0
						font-size 1.1em
						color #8cc63e
						

	#footer
		z-index 1
		background-color black
		height 160px

		div
			display block
			width 475px
			margin 0 auto
			padding 0
			position relative
			top 105px

			figure, p
				display inline-block
				

			figure
				width 95px
				vertical-align middle
				img
					width 100%


			p
				font-family open sans
				font-weight lighter
				color white
				margin-left 10px
				font-size 0.8em

			p:before
				content: "â€¢"
				color white
				font-weight bold
				margin-right 7px

	
